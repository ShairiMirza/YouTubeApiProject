@model List<YouTubeApiProjects.Models.YoutubeVideoModel>

<h2>Search YouTube Videos</h2>

<form asp-action="Search" method="post" class="mb-3">
    <div class="input-group">
        <input type="text" name="query" class="form-control" placeholder="Search for videos..." />
        <button type="submit" class="btn btn-dark">Search</button>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var video in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <!-- Video Thumbnail -->
                    <img src="@video.ThumbnailUrl" class="card-img-top" alt="@video.Title" />

                    <!-- Video Info -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-center">@video.Title</h5>
                        <p class="card-text text-center">@video.Description</p>

                        <!-- Watch Button (full width, aligned with thumbnail) -->
                        <div class="mt-auto">
                            <a href="@video.VideoUrl" target="_blank">
                                <button type="button" class="btn btn-dark w-100">Watch</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}